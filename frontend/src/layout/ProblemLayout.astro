---
export const prerender = false;

import "../styles/global.css";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import { initTasksTable, getAllTasks } from "../lib/tasks";
import { getCurrentUser } from "../lib/session";

const { activeId } = Astro.props as { activeId?: string };
const user = await getCurrentUser(Astro.request);
await initTasksTable();
const tasks = await getAllTasks();

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Problems</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
  </head>

  <body>
    <Header user={user} />
    <div class="shell">
      <Sidebar problems={tasks.map((t) => ({ id: String(t.id), title: t.name, points: t.points }))} activeId={activeId} />
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .shell {
    display: flex;
    min-height: 100vh;
  }

  .content {
    flex: 1;
    padding: 20px;
    max-width: 1100px;
  }
</style>
