---
export const prerender = false;
 
import "../styles/global.css";
import { problems } from "../data/problems";
import { getCurrentUser } from "../lib/session";
import Header from "../components/Header.astro";
 
const user = await getCurrentUser(Astro.request);
const completedTasks = user?.completed_tasks || [];
---
 
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Play - BETA-CODE</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
</head>

<Header user={user} />

  <main style="max-width: 900px; margin: 0 auto; padding: 16px;">
    <h1>All Tasks</h1>
    <p class="p-text">Choose a task to start coding.</p>
    {user && (
      <p class="p-text">Completed: {completedTasks.length} / {problems.length}</p>
    )}
    <ul style="list-style:none; padding:0; display:grid; gap:12px;">
      {problems.map((t) => {
        const isCompleted = completedTasks.includes(t.id);
        return (
          <li class={`task-item ${isCompleted ? 'completed' : ''}`}>
            <div style="display:flex; justify-content:space-between; align-items:center;">
              <div>
                <strong>
                  {isCompleted && <span class="check-mark">âœ“ </span>}
                  {t.title}
                </strong>
                <div class="p-text">
                  {t.type === "solve" && <span class="type-tag solve-tag">Solve</span>}
                  {t.type === "fix" && <span class="type-tag fix-tag">Bug Fix</span>}
                  Difficulty: {t.difficulty}  |  Points: {t.points}
                </div>
              </div>
              <a href={`/problems/${t.id}`}>Open</a>
            </div>
          </li>
        );
      })}
    </ul>
  </main>
 
  <style>
    .task-item {
      border: 1px solid #333;
      border-radius: 12px;
      padding: 12px;
    }
 
    .task-item.completed {
      border-color: #2d8a4e;
      background: rgba(45, 138, 78, 0.1);
    }
 
    .check-mark {
      color: #2d8a4e;
    }

     
    .type-tag {
      display: inline-block;
      padding: 0.1rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      margin-right: 0.5rem;
    }

    .solve-tag {
    background: rgba(46, 204, 113, 0.15);
    color: #2ecc71;
    border: 1px solid rgba(46, 204, 113, 0.3);
  }
 
    .fix-tag {
      background: rgba(230, 126, 34, 0.15);
      color: #e67e22;
      border: 1px solid rgba(230, 126, 34, 0.3);
    }
  </style>
</body>
</html>